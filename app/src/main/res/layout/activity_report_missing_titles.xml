<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/small_padding_or_margin"
    android:layout_marginEnd="@dimen/small_padding_or_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ReportMissingTitles">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cant_find_text" />

    <EditText
        android:id="@+id/missing_title_url_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/link_to_the_title_s_imdb_page"
        android:inputType="textUri" />

    <Button
        android:id="@+id/send_missing_title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send" />

</LinearLayout>